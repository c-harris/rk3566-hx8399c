/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/rockchip.h>
#include <dt-bindings/display/drm_mipi_dsi.h>

/ {
	metadata {
		title = "Enable test dsi Display";
		compatible = "radxa,cm3-io";
		category = "display";
		exclusive = "dsi0", "pwm13";
		description = "Enable test dsi Display.";
	};

	fragment@0 {
		target-path = "/";

		__overlay__ {
			vcc_mipi_lcd0: vcc-mipi {
				compatible = "regulator-fixed";
				regulator-name = "vcc_mipi_lcd0";
				regulator-always-on;
				regulator-boot-on;
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				vin-supply = <&vcc_1v8>;
				regulator-state-mem {
					regulator-off-in-suspend;
				};
			};

			lcd0_backlight:lcd0-backlight {
				status = "okay";
				compatible = "pwm-backlight";
				pwms = <&pwm13 0 25000 12000>;
				brightness-levels = <
					255 254 253 252 251 250 249 248
					247 246 245 244 243 242 241 240
					239 238 237 236 235 234 233 232
					231 230 229 228 227 226 225 224
					223 222 221 220 219 218 217 216
					215 214 213 212 211 210 209 208
					207 206 205 204 203 202 201 200
					199 198 197 196 195 194 193 192
					191 190 189 188 187 186 185 184
					183 182 181 180 179 178 177 176
					175 174 173 172 171 170 169 168
					167 166 165 164 163 162 161 160
					159 158 157 156 155 154 153 152
					151 150 149 148 147 146 145 144
					143 142 141 140 139 138 137 136
					135 134 133 132 131 130 129 128
					127 126 125 124 123 122 121 120
					119 118 117 116 115 114 113 112
					111 110 109 108 107 106 105 104
					103 102 101 100  99  98  97  96
					95  94  93  92  91  90  89  88
					87  86  85  84  83  82  81  80
					79  78  77  76  75  74  73  72
					71  70  69  68  67  66  65  64
					63  62  61  60  59  58  57  56
					55  54  53  52  51  50  49  48
					47  46  45  44  43  42  41  40
					39  38  38  37  37  36  36  35
					35  34  34  33  33  32  32  31
					31  30  30  29  29  28  28  27
					27  26  26  25  25  24  24  23
					23  22  22  21  21  20  20   0
				>;
				default-brightness-level = <100>;
				enable-gpios = <&gpio4 RK_PA3 GPIO_ACTIVE_HIGH>;
				pinctrl-names = "default";
				pinctrl-0 = <&lcd0_backlight_drv>;

			};
		};
	};

	fragment@1 {
		target = <&pwm13>;

		__overlay__ {
			status = "okay";
			pinctrl-0 = <&pwm13m1_pins>;
		};
	};

	fragment@2 {
		target = <&video_phy0>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target = <&dsi0>;

		__overlay__ {
			status = "okay";
			dsi0_panel: panel@0 {
				status = "okay";
				compatible = "xinsun,xf055fhd03";
				reg = <0>;
				backlight = <&lcd0_backlight>;

				vcc-supply = <&vcc_mipi_lcd0>;
		                reset-gpios = <&gpio4 RK_PA2 GPIO_ACTIVE_HIGH>;
                                enable-gpio = <&gpio0 RK_PD5 GPIO_ACTIVE_HIGH>;

				pinctrl-names = "default";
				pinctrl-0 = <&dsi0_lcd_rst_gpio>;


				ports {
					#address-cells = <1>;
					#size-cells = <0>;

					port@0 {
						reg = <0>;
						panel_in_dsi0: endpoint {
							remote-endpoint = <&dsi0_out_panel>;
						};
					};
				};
			};

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@1 {
					reg = <1>;
					dsi0_out_panel: endpoint {
						remote-endpoint = <&panel_in_dsi0>;
					};
				};
			};
		};
	};

	fragment@4 {
		target = <&dsi0_in_vp0>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@5 {
		target = <&vp0_out_dsi0>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@6 {
		target = <&route_dsi0>;

		__overlay__ {
			status = "okay";
			connect = <&vp0_out_dsi0>;
		};
	};

	fragment@7 {
		target = <&route_hdmi>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@8 {
		target = <&hdmi>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@9 {
		target = <&pinctrl>;

		__overlay__ {
			dsi0-lcd {
				dsi0_lcd_rst_gpio: dsi0-lcd-rst-gpio {
					rockchip,pins = <4 RK_PA2 RK_FUNC_GPIO &pcfg_pull_up>;
				};

				dsi0_lcd_enable_gpio: dsi0-lcd-enable-gpio {
                                        rockchip,pins = <0 RK_PD5 RK_FUNC_GPIO &pcfg_pull_up>;
                                };

				lcd0_backlight_drv: lcd0-backlight-drv {
					rockchip,pins = <4 RK_PA3 RK_FUNC_GPIO &pcfg_pull_up>;
				};
			};
		};
	};
	fragment@10 {
		target = <&rk817>;
		__overlay__ {
			rtc {
				status = "okay";
			};
		};
	};
	
	fragment@11 {
		target = <&hym8563>;
		__overlay__ {
			status = "disabled";
		};
	};
	fragment@12 {
		target = <&pcie2x1>;
		__overlay__ {
			status = "disabled";
		};
	};
	fragment@13 {
		target = <&rk817_sound>;
		__overlay__ {
			status = "disabled";
		};
	};
	fragment@14 {
		target = <&gmac1>;
		__overlay__ {
			status = "disabled";
		};
	};
};
